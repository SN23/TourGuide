<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sukhjinder.tourguide.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activities"
        style="@style/CategoryStyle"
        android:background="@color/category_activities"
        android:text="@string/category_activities" />

    <TextView
        android:id="@+id/events"
        style="@style/CategoryStyle"
        android:background="@color/category_events"
        android:text="@string/category_events" />

    <TextView
        android:id="@+id/pointsOfInterest"
        style="@style/CategoryStyle"
        android:background="@color/category_points_of_interest"
        android:text="@string/category_points_of_interest" />

    <TextView
        android:id="@+id/restaurant"
        style="@style/CategoryStyle"
        android:background="@color/category_restaurant"
        android:text="@string/category_restaurant" />


</LinearLayout>
